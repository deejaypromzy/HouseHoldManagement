<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.projectwork.householdmanagement.AddCategory"
    tools:showIn="@layout/activity_add_category"
    android:orientation="vertical">




<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/add_category_image_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/add_category_e1"
        android:src="@drawable/ic_reset"/>

    <EditText
        android:id="@+id/add_category_e1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/add_category_image_btn"
        android:ems="10"
        android:hint="Category Name"
        ><requestFocus /></EditText>

</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelBtn"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="Cancel" />

        <Button
            android:id="@+id/add_categorybtn"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorTextHint"
            android:text="SEND" />
    </LinearLayout>

</LinearLayout>