<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="10dp"
    tools:context="com.projectwork.householdmanagement.Splash">

    <me.wangyuwei.particleview.ParticleView
        android:id="@+id/pv_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/MKLoader"
        pv:pv_host_text="HouseHold"
        pv:pv_host_text_anim_time="1500"
        pv:pv_host_text_size="35sp"
        pv:pv_particle_text="@string/sms"
        pv:pv_particle_text_size="25sp"
        pv:pv_spread_anim_time="500"
        pv:pv_text_anim_time="1500"
        pv:pv_text_color="#FFF" />

    <com.tuyenmonkey.mkloader.MKLoader
        android:id="@+id/MKLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:mk_type="Whirlpool" />

</RelativeLayout>
