<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projectwork.householdmanagement.main"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/fab_size_normal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:onClick="gotoChildCare"
                    android:scaleType="centerCrop"
                    android:soundEffectsEnabled="true"
                    app:srcCompat="@drawable/child" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_shape"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingEnd="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingStart="5dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="Child Care"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="20dp"

                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="120dp"
                    android:onClick="gotoCookingRecipe"
                    android:layout_height="120dp"
                    android:clickable="true"
                    android:background="?selectableItemBackgroundBorderless"
                    android:cropToPadding="false"
                    android:scaleType="centerCrop"
                    android:soundEffectsEnabled="true"
                    app:srcCompat="@drawable/dish" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_shape"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingEnd="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingStart="5dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="Local Recipies"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="gotoCleaningAndLaundry"
                android:clickable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:soundEffectsEnabled="true"
                app:srcCompat="@drawable/laundry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_shape"
                android:fontFamily="sans-serif-condensed"
                android:paddingEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:textColor="@android:color/holo_red_dark"
                android:text="Laundry Guide"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageBed"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="gotoBedMaking"
                android:soundEffectsEnabled="true"
                android:src="@drawable/bed"
                civ_border_color="@android:color/holo_red_dark"
                civ_border_width="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/my_shape"
                android:fontFamily="sans-serif-condensed"
                android:paddingEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:textColor="@android:color/holo_red_dark"
                android:text="Bed Making"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="120dp"
                    android:onClick="gotoFinanceAndBudgeting"
                    android:layout_height="120dp"
                    android:clickable="true"
                    android:background="?selectableItemBackgroundBorderless"
                    android:scaleType="centerCrop"
                    android:soundEffectsEnabled="true"
                    app:srcCompat="@drawable/budget" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_shape"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingEnd="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingStart="5dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="Personal Budget"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:clickable="true"
                    android:onClick="gotoRoomDecoration"
                    android:background="?selectableItemBackgroundBorderless"
                    android:scaleType="centerCrop"
                    android:soundEffectsEnabled="true"
                    app:srcCompat="@drawable/room" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_shape"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingEnd="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingStart="5dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="Room Deco"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
